<LiquidWormhole @stack="modal-backdrop" @class="modal-backdrop" />
<LiquidTether @stack="modal-dialog" @value={{1}} @target="document.body" @targetModifier="visible" @attachment="middle center" @class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title">Modal Header</h4>
    </div>

    <div class="modal-body">
      <p>
        Here's a modal! It's located in it's own route, so you can separate
        context for more complicated modals and make them routeable.
      </p>
    </div>

    <div class="modal-footer">
      <LinkTo @route="docs.routed-tethers" class="btn btn-default btn-embossed" @activeClass={{null}}>Cancel</LinkTo>
      <LinkTo @route="docs.routed-tethers.step-two" class="btn btn-primary btn-embossed" @activeClass={{null}}>Next</LinkTo>
    </div>
  </div>
</LiquidTether>
