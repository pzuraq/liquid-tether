<!-- docs.hbs -->

<div class="example-button-container">
  <LinkTo @route="docs.modal">Open Routed Modal</LinkTo>
</div>

<!-- modal.hbs -->

<LiquidTether @to="modal-dialog" @target="document.body" @targetModifier="visible" @attachment="middle center" @tetherClass="modal-dialog" @overlayClass="modal-backdrop">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title">Modal Header</h4>
    </div>

    <div class="modal-body">
      <p>
        Here's a modal! It's located in it's own route, so you can separate
        context for more complicated modals and make them routeable.
      </p>
    </div>

    <div class="modal-footer">
      <LinkTo @route="docs">
        Cancel
      </LinkTo>
      <LinkTo @route="docs">
        Ok
      </LinkTo>
    </div>
  </div>
</LiquidTether>
